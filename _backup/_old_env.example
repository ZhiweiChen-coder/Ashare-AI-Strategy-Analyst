# AI 配置 (必需)
LLM_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
LLM_BASE_URL=https://api.deepseek.com
LLM_MODEL=deepseek-chat

# 微信推送配置 (推荐)
SERVERCHAN_KEY=SCTxxxxxxxxxxxxxxxxxxxxxxx

# 邮件推送配置 (可选)
SMTP_SERVER=smtp.qq.com
SMTP_PORT=587
SENDER_EMAIL=your_email@qq.com
SENDER_PASSWORD=your_email_auth_code
RECEIVER_EMAIL=receiver@qq.com

# 企业微信推送配置 (可选)
WORK_WECHAT_WEBHOOK=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=xxxxxxxx

# 推送方式配置 (默认: serverchan)
# 多个方式用逗号分隔: serverchan,email,work_wechat
PUSH_METHODS=serverchan

# 应用配置
ENABLE_PUSH=true
DATA_COUNT=120 